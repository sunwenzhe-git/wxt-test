{
  "manifest_version": 3,
  "name": "vertical-tags",
  "version": "0.0.0",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "extensionApi": "chrome",
  "perBrowserTypes": true,
  "permissions": [
    "activeTab",
    "scripting",
    "theme",
    "sidePanel",
    "devtools",
    "contextMenus",
    "storage",
    "webRequest",
    "tabs"
  ],
  "action": {},
  "web_accessible_resources": [
    {
      "resources": [
        "/example-iframe.html"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "commands": {
    "wxt:reload-extension": {
      "description": "Reload the extension during development",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://localhost/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:3000; object-src 'self';",
    "sandbox": "script-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:3000; sandbox allow-scripts allow-forms allow-popups allow-modals; child-src 'self';"
  }
}